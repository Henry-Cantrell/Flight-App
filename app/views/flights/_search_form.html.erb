<div class="columns">
<div class="column is-one-quarter">
<div class="box">
<!-- Form Name -->

<form action="" method="post">

<legend>Search for a flight:</legend>

<!-- Select Basic -->
<div class="field">
  <label class="label" for="selectbasic-0">Departure flight</label>
  <div class="control">
  	<div class="select">
	    <select id="selectbasic-0" name="selectbasic-0" class="">
            <%= @flights_origins.each do |origin| %>
	            <option><%= origin[0] %></option>
            <% end %>
	    </select>
	</div>
  </div>
</div>

<!-- Select Basic -->
<div class="field">
  <label class="label" for="selectbasic-2">Arrival flight</label>
  <div class="control">
  	<div class="select">
	    <select id="selectbasic-2" name="selectbasic-2" class="">
        <%= @flights_destinations.each do |destination| %>
            <option><%= destination[0] %></option>
        <% end %>
	    </select>
	</div>
  </div>
</div>

<!-- Select Basic -->
<div class="field">
  <label class="label" for="selectbasic-2">Select date of flight</label>
  <div class="control">
  	<div class="select">
	    <select id="selectbasic-2" name="selectbasic-2" class="">
        <%= @flights_dates.each do |date| %>
            <option><%= date[0] %></option>
        <% end %>
	    </select>
	</div>
  </div>
</div>

<!-- Button -->
<div class="field">
  <label class="label" for="singlebutton-1">Single Button</label>
  <div class="control">
    <button id="singlebutton-1" name="singlebutton-1" type="submit" class="button is-success">Search flights</button>
  </div>
</div>


</fieldset>
</form>
</div>
</div>
</div>



