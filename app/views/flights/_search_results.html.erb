<div class='columns' style="margin-left:500px">
<div class='column is-one-quarter'>
<div class='box'>
<%= simple_form_for :flight_select, url: new_booking_path, method: :get do |f| %>

<!-- Select Basic -->
<div class="field">
  <label class="label" for="selectbasic-0">Matching flights:</label>
  <div class="control">
	<% unless @flight_search_results.empty? %>
  	<div class="select">
	    <select id="selectbasic-0" name="flight_id" class="">
            <%= @flight_search_results_names.each do |name| %>
	            <option value= <%= name[1] %> ><%= name[0] %></option>
            <% end %>
	    </select>
	<% else %>
	No matching flights, please make another choice
	<% end %>
	</div>
  </div>
</div>

<!-- Select Basic -->
<div class="field">
  <label class="label" for="selectbasic-0">Number of passengers:</label>
  <div class="control">
	<% unless @flight_search_results.empty? %>
  	<div class="select">
	    <select id="selectbasic-0" name="passenger_count" class="">
            <%= @flight_search_results_names.each do |name| %>
	            <option value= <%= 1 %> ><%= 1 %></option>
		    <option value= <%= 2 %> ><%= 2 %></option>
		    <option value= <%= 3 %> ><%= 3 %></option>
		    <option value= <%= 4 %> ><%= 4 %></option>
            <% end %>
	    </select>
	<% else %>
	No matching flights, please make another choice
	<% end %>
	</div>
  </div>
</div>

<!-- Button -->
<div class="field">
  <div class="control">
  <%= f.button :submit, 'Book', class: "button is-success is-outlined" %>
  </div>
</div>

<% end %>
</div>
</div>
</div>

